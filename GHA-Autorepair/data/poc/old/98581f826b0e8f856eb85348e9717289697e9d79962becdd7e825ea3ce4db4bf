name: Build And Test [Python 3.7, 3.8, 3.9]

on: [push, pull_request]

jobs:
  build:

    runs-on: ${{ matrix.os }}
    strategy:
      matrix:
        os: [ubuntu-latest, macos-latest, windows-latest]
        python-version: [3.7, 3.8, 3.9]

    env:
      echo PYTHONPATH=./plugin:./src:./test
      echo MYPYPATH=./plugin:./src:./test:./stubs
    steps:
      - uses: actions/checkout@v2
      - name: Set up Python ${{ matrix.python-version }}
        uses: actions/setup-python@v2
        with:
          python-version: ${{ matrix.python-version }}
      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install flake8 pytest
          pip install -r requirements.txt
      - name: Additional environment setup
        if: runner.os == 'Windows'
        run:
          echo "PYTHONPATH=.\plugin;.\src;.\test" >> $env:GITHUB_ENV
          echo "MYPYPATH=.\plugin;.\src;.\test;.\stubs" >> $env:GITHUB_ENV
      - name: Lint with flake8
        run: |
          # stop the build if there are Python syntax errors or undefined names
          flake8 . --count --select=E9,F63,F7,F82 --show-source --statistics
          # exit-zero treats all errors as warnings.
          flake8 . --count --exit-zero --max-complexity=10 --max-line-length=160 --statistics
      - name: Typecheck with mypy
        run: |
          mypy plugin/*/*.py src/*.py test/*.py
      - name: Test with pytest
        run: |
          pytest