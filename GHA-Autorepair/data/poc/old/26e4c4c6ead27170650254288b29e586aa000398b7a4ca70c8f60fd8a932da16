name: Go

on:
  push:
    branches: [ master ]
  pull_request:
    branches: [ master ]

jobs:

  build:
    runs-on: ubuntu-latest
    env:
      VARNAM_UPSTREAM: https://varnam.subinsb.com

    steps:
      - name: Checkout
          uses: actions/checkout@v2
          with:
            submodules: recursive

      - name: Set up Go
        uses: actions/setup-go@v2
        with:
          go-version: 1.16

      - name: Build
        run: make library
      
      - name: Set env
        run: echo "VARNAM_VST_DIR=$(echo $(realpath schemes))" >> $GITHUB_ENV
      
      - name: Download schemes
        run: wget -O $VARNAM_VST_DIR/ml.vst "$VARNAM_UPSTREAM/languages/ml/download"

      - name: Test
        run: make test
