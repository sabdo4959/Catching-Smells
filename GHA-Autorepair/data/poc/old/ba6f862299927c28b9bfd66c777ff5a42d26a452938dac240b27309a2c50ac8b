name: Python Package using Conda

on: [push, workflow_dispatch]

jobs:
  build-all:
    name: scqubits testing (${{ matrix.python-version }}, ${{ matrix.os }})
    runs-on: ${{ matrix.os }}
    defaults:
      run:
        shell: bash -el {0}
    strategy:
      fail-fast: false
      matrix:
        os: ["ubuntu-latest", "macos-latest", "windows-latest"]
        python-version: []
    steps:
      - uses: actions/checkout@v4
        name: Checkout repository

      - name: Python setup for macos-latest with python 3.7
        if: ${{matrix.python-version == '3.7' && matrix.os == 'macos-latest'}}
        uses: conda-incubator/setup-miniconda@v3
        with:
            miniforge-variant: Mambaforge
            use-mamba: true
            auto-update-conda: true
            python-version: ${{ matrix.python-version }}
            architecture: x64
            channels: conda-forge

      - name: Python setup 
        if: ${{!(matrix.python-version == '3.7' && matrix.os == 'macos-latest')}}
        uses: conda-incubator/setup-miniconda@v3
        with:
            miniforge-variant: Mambaforge
            use-mamba: true
            auto-update-conda: true
            python-version: ${{ matrix.python-version }}
            channels: conda-forge

      - name: Check Python version
        id: check_version
        run: |
          is_less_than_3_9=$(python -c 'import sys; print(sys.version_info < (3, 9))')
          echo "is_less_than_3_9=$is_less_than_3_9" >> $GITHUB_ENV

      - name: conda info
        run: conda info
      - name: Add conda to system path
        run: |
          # $CONDA is an environment variable pointing to the root of the miniconda directory
          echo $CONDA/bin >> $GITHUB_PATH
      - name: Lint with flake8
        run: |
          mamba install flake8
          # stop the build if there are Python syntax errors or undefined names
          flake8 . --count --select=E9,F63,F7,F82 --show-source --statistics
          # exit-zero treats all errors as warnings. The GitHub editor is 127 chars wide
          flake8 . --count --exit-zero --max-complexity=10 --max-line-length=127 --statistics

      - name: Install all dependencies (py<3.9) 
        if: env.is_less_than_3_9 == 'True'
        run: |
          mamba install --file ./requirements-conda-py37_py38.txt -c conda-forge

      - name: Install all dependencies (py>=3.9) 
        if: env.is_less_than_3_9 == 'False'
        run: |
          mamba install --file ./requirements-conda.txt -c conda-forge

      - name: Install optional dependencies 
        run: |
          mamba install --file ./optional-requirements.txt -c conda-forge
          # The following is a temporary workaround for h5py hdf5 incompatibilities under conda install
          # conda remove h5py
          # pip install h5py
      - name: Install scqubits
        run: |
          pip install --no-dependencies .
      - name: Attempt scqubits import
        run: python -c 'import scqubits'
      - name: Run all pytests (serial)
        run: |
          pytest -v --pyargs scqubits
      - name: Run all pytests (multiprocessing)
        run: |
          pytest -v --pyargs scqubits --num_cpus=4
