name: Publish to Pub.dev

on: [push]
  release:
    types: [published]

jobs:
  build:

    runs-on: ubuntu-latest

    container:
      image:  google/dart:latest

    steps:
      - uses: actions/checkout@v1
      - name: Copy required files
        run:  |
          cp ../README.md README.md
          cp ../LICENSE LICENCE
          pub publish --dry-run
        working-directory: ./mapper